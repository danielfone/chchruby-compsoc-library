<div class="row">
  <div class="col-md-4">

    <%= form_for borrower do |f| %>
      <%= render 'form_errors', record: borrower if borrower.errors.any? %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <%= f.submit %>
    <%- end -%>

  </div>
</div>
