<h2>
  Borrowers
  <%= link_to 'New', new_borrower_path, class: 'btn btn-primary' %>
</h2>

<%- if @borrowers.any? -%>
  <table class="borrower list">
    <thead>
      <tr>
        <th>Name</th>
        <th>Code</th>
        <th>On Loan</th>
        <th>Overdue</th>
        <th></th>
      </tr>
    </thead>
    <%- @borrowers.each do |borrower| -%>
      <tr>
        <td>
          <%= link_to borrower.name, edit_borrower_path(borrower) %>
        </td>
        <td>
          <%= borrower.code %>
        </td>
        <td>
          <%= borrower.current_loan_count %>
        </td>
        <td>
          <%= borrower.current_overdue_count %>
        </td>
        <td>
          <%= link_to 'Issue Books', loans_borrower_path(borrower), class: 'action' %>
        </td>
      </tr>
    <%- end -%>
  </table>
<%- else -%>
  <p class="text text-warning">No borrowers found</p>
<%- end -%>
