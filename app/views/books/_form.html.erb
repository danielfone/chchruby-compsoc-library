<div class="row save-record">
  <div class="col-md-4">

    <%= form_for book, class: 'save' do |f| %>
      <%= render 'form_errors', record: book if book.errors.any? %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :author %>
        <%= f.text_field :author, class: 'form-control' %>
      </div>
      <%= f.submit %>
    <%- end -%>

  </div>
</div>