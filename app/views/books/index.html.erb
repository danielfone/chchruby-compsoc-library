<h2>
  Books
  <%= link_to 'New', new_book_path, class: 'btn btn-primary' %>
</h2>

<%- if @books.any? -%>
  <table class="book list">
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
      </tr>
    </thead>
    <%- @books.each do |book| -%>
      <tr>
        <td>
          <%= link_to book.title, edit_book_path(book) %>
        </td>
        <td>
          <%= book.author %>
        </td>
      </tr>
    <%- end -%>
  </table>
<%- else -%>
  <p class="alert alert-info">No books found</p>
<%- end -%>
